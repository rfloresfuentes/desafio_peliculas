<h1>Agregar Documentales</h1>
<br><br><br>
<%= form_with model: @documentary, method: :post do |form| %>
        <div class="col-4">
                <div>
                        <%= form.label :name, "Documental", class: "form-label" %>
                        <%= form.text_field :name, class: "form-control" %>
                </div>
                <div>
                        <%= form.label :synopsis, "Sinópsis", class: "form-label" %>
                        <%= form.text_field :synopsis, class: "form-control" %>
                </div>
                <div>
                        <%= form.label :director, "Director", class: "form-label" %>
                        <%= form.text_field :director, class: "form-control" %>
                </div>
                <div>
                        <%= form.label :url_img, "Ubicación Imagen", class: "form-label" %>
                        <%= form.text_field :url_img, class: "form-control" %>
                </div>
                <div>
                        <%= form.submit "Crear", class: "btn btn-primary" %>
                </div>
        <div>
<% end %>