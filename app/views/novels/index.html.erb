<h1>Series Ingresadas</h1>
<div class="containter center">
    <%= link_to "Agregar nueva Serie", novels_new_path %>
</div>

<div class="row row-cols-1 row-cols-md-4 g-4">
    <% @novels.each do |p| %>
        <div class="col">
            <div class="card">
                <%= image_tag  "#{p.url_img}" %>
                <div class="card-body">
                    <h5 class="card-title"><%= p.name %></h5>
                    <p class="card-text">Resumen: <%= p.synopsis %></p>
                    <p class="card-text"><small class="text-body-secondary">Director: <%= p.director %></small></p>
                </div>
            </div>
        </div>
    <% end%>
</div>